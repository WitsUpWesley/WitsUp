<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:orientation="vertical"
    tools:context="com.example.witsup.CreateCourse">

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="logout"
        android:text="Log Out" />

    <TextView
        android:id="@+id/lblCourseCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course Code"
       />

    <EditText
        android:id="@+id/ETCourseCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
      />

    <TextView
        android:id="@+id/lblCoursePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Course Password"
      />

    <EditText
        android:id="@+id/ETCoursePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text=""
         />

    <TextView
        android:id="@+id/lblCourseDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course Description" />

    <EditText
        android:id="@+id/ETCourseDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <Button
        android:id="@+id/btnCreateCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="createCourse"
        android:text="Create Course2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />
</LinearLayout>